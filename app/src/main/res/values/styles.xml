<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--主页面的radiobutton的样式-->
    <style name="Radio_main_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width" >0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/main_radiobutton_textcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawableBottom">@drawable/rb_butt_title_line_selector</item>



    </style>    

