<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_dymsg_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/msg_mine"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_dymsg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="forever"
                android:textSize="16sp"
                android:textColor="@color/dark"/>
            <TextView
                android:id="@+id/tv_dymsg_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/radiotextcolor_normal"
                android:textSize="14sp"
                android:text="很欣赏你的才华，非常渴望与你合作！！！"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_dymsg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/radiotextcolor_normal"
                android:textSize="14sp"
                android:text="昨天"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_dymsg_chatcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_chatcount"
                android:textColor="#fff"
                android:text="+12"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/state_line"/>
</LinearLayout>
