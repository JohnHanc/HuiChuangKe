<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_review_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/icon"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_review_icon">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_zan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="名字"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_zan_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="10-21"
                    android:paddingLeft="6dp"
                    android:textColor="@color/cp_alpha_gray"/>
                <TextView
                    android:id="@+id/tv_zan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="10:00"
                    android:paddingLeft="10dp"
                    android:textColor="@color/cp_alpha_gray"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp">
                <TextView
                    android:id="@+id/tv_zan_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textSize="12sp"
                    android:textColor="#5e92cb"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="很欣赏你这个项目哦！"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
       <Button
           android:id="@+id/bt_zan_replay"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/bg_btn"
           android:text="回复"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:textColor="@color/cp_alpha_gray"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_review_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="啊啊啊啊啊 啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊 啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="#f6f5f5">
        <ImageView
            android:id="@+id/iv_review_artpic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/li"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_review_artname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花儿"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_review_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaaaaaaaaaa"
                android:textSize="12sp"
                android:textColor="@color/cp_alpha_gray"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/line_gray"/>
</LinearLayout>